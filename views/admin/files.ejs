<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin panel</title>
    <script>
		async function delFile(file) {
            let url = window.location.href.split('/')
            url = url[0] + '//' + url[2] + '/api/files/images/' + file
			await fetch(url, {
				method: 'DELETE'
			})
			location.reload()
		}
		function onMouseOver(id) {
			const div = document.getElementById(id)
            if (!div.contains(document.getElementById("img-" + id))) {
				const img = document.createElement("img")
				img.setAttribute("src", "/" + id)
				img.setAttribute("id", "img-" + id)
                img.setAttribute("class", "hoverImg")
				div.appendChild(img)
            }
        }
    </script>
    <style>
        .item>.hoverDiv { display: none; }
        .item:hover>.hoverDiv { display: block; }
        .hoverDiv {
            position: fixed;
            top: 0;
            right: 0;
            max-height: 300px;
            max-width: 500px;
        }
        .hoverImg {
            max-width:100%;
            max-height:100%;
            border-style: solid;
            border-width: thick;
            border-color: red;
        }
    </style>
</head>
<body>
    <label for="fileList">
        List of files (higher number is newer)
    </label>
    <ol id="fileList">
        <% if (files.length >= 1) { %>
            <% for (const file of files) { %>
                <li>
                    <div
                            class="item"
                            onmouseover="onMouseOver('<%=file%>')"
                    >
                        <a href="/<%=file%>" target="_blank"><%= file %></a>
                        <button class="deleteButton" onclick="delFile('<%=file%>')">Delete</button>
                        <div class="hoverDiv" id="<%=file%>">
                            <!--
                            This has an img in it when hovered over, it is not preloaded to speed up loading
                            -->
                        </div>
                    </div>
                </li>
            <% } %>
        <% } else { %>
            <h1>No files :/</h1>
        <% } %>
    </ol>
</body>
</html>