{
    "env": {
        "es2021": true,
        "node": true,
		"browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
	"globals": {
		"semver": "readonly",
		"$": "readonly"
	},
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
	"ignorePatterns": [
		"dist",
		"files",
		"static/*.browser.js",
		"node_modules",
		".vscode",
		".idea"
	]
}
